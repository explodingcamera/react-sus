{
  "name": "react-sus",
  "version": "0.1.4",
  "description": "minimal suspense-based data-fetching",
  "license": "MIT",
  "author": "<mail@henrygressmann.de>",
  "type": "module",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/"
  ],
  "scripts": {
    "build": "npm run build:esbuild && npm run types",
    "build:esbuild": "esbuild src/index.ts --minify --bundle --outdir=lib --platform=node --external:react --target=esnext --format=esm",
    "dev": "node --loader=ts-node/esm --no-warnings src/index.ts",
    "release": "release-it",
    "test": "tap --ts --node-arg=--no-warnings --node-arg=--loader=ts-node/esm",
    "snapshot": "TAP_SNAPSHOT=1 npm run test",
    "types": "tsc -p tsconfig.build.json",
    "preversion": "npm run build"
  },
  "devDependencies": {
    "@explodingcamera/eslint-config": "^21.0.0",
    "@types/node": "^17.0.14",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@types/tap": "^15.0.5",
    "esbuild": "^0.14.16",
    "eslint": "^8.8.0",
    "global-jsdom": "^8.4.0",
    "jsdom": "^19.0.0",
    "react": "^18.0.0-rc.0",
    "react-dom": "^18.0.0-rc.0",
    "tap": "^15.1.6",
    "release-it": "^14.12.4",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5"
  },
  "peerDependencies": {
    "react": ">=17"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": true
    }
  }
}
